<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/dark_purple" android:centerColor="@color/dark_purple"
                android:centerY="0.75" android:endColor="@color/dark_purple1" android:angle="90" />
            <stroke android:width="3dp" android:color="@color/black" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/dark_green" android:endColor="@color/dark_green1"
                    android:angle="90" />
                <stroke android:width="3dp" android:color="@color/black" />
            </shape>
        </clip>
    </item>
</layer-list>